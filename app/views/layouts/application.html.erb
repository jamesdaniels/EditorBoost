<!DOCTYPE html>
<html>
<head>
  <title>Editorboost</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <p class="header">$EDITOR Boost</p>

<ul class="navigation">
  <% Editor.all.each do |editor| %>
    <%= content_tag :li, :class => (editor == @editor && 'selected' || '') do %>
      <%= link_to editor.name, plugins_path(:editor => editor.short) %>
    <% end %>
  <% end %>
</ul>

<%= yield %>

</body>
</html>
